<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_bang_cong_thang_tree" model="ir.ui.view">
        <field name="name">bang.cong.thang.tree</field>
        <field name="model">bang_cong_thang</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nhan_vien_id"/>
                <field name="thang"/>
                <field name="nam"/>
                <field name="so_cong"/>
                <field name="tong_gio_lam"/>
                <field name="tong_ot"/>
                <field name="nghi_co_luong"/>
                <field name="nghi_khong_luong"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_bang_cong_thang_form" model="ir.ui.view">
        <field name="name">bang.cong.thang.form</field>
        <field name="model">bang_cong_thang</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="nhan_vien_id"/>
                            <field name="thang"/>
                            <field name="nam"/>
                        </group>
                        <group>
                            <field name="so_cong"/>
                            <field name="tong_gio_lam"/>
                            <field name="tong_ot"/>
                            <field name="nghi_co_luong"/>
                            <field name="nghi_khong_luong"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi tiết điểm danh">
                            <field name="diem_danh_ids">
                                <tree>
                                    <field name="ngay_lam_viec"/>
                                    <field name="ngay_trong_tuan"/>
                                    <field name="loai_cong_viec"/>
                                    <field name="gio_check_in"/>
                                    <field name="gio_check_out"/>
                                    <field name="so_gio_lam_thuc_te"/>
                                    <field name="di_muon_phut"/>
                                    <field name="ve_som_phut"/>
                                    <field name="so_cong"/>
                                    <field name="trang_thai_diem_danh"/>
                                    <field name="trang_thai_phe_duyet"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_bang_cong_thang_search" model="ir.ui.view">
        <field name="name">bang.cong.thang.search</field>
        <field name="model">bang_cong_thang</field>
        <field name="arch" type="xml">
            <search>
                <field name="nhan_vien_id"/>
                <field name="thang"/>
                <field name="nam"/>
                <filter string="Tháng này" name="thang_nay" 
                    domain="[('thang','=',context_today().month),('nam','=',context_today().year)]"/>
                <group expand="0" string="Group By">
                    <filter string="Nhân viên" name="group_nhan_vien" context="{'group_by':'nhan_vien_id'}"/>
                    <filter string="Tháng" name="group_thang" context="{'group_by':'thang'}"/>
                    <filter string="Năm" name="group_nam" context="{'group_by':'nam'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bang_cong_thang" model="ir.actions.act_window">
        <field name="name">Bảng Công Tháng</field>
        <field name="res_model">bang_cong_thang</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_thang_nay':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo bảng công tháng mới
            </p>
        </field>
    </record>

</odoo>
