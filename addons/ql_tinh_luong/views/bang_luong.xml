<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bang_luong_tree" model="ir.ui.view">
        <field name="name">bang.luong.tree</field>
        <field name="model">bang_luong</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nhan_vien_id"/>
                <field name="thang"/>
                <field name="nam"/>
                <field name="tong_thu_nhap"/>
                <field name="tong_khau_tru"/>
                <field name="thuc_linh"/>
                <field name="trang_thai"/>
            </tree>
        </field>
    </record>

    <record id="view_bang_luong_form" model="ir.ui.view">
        <field name="name">bang.luong.form</field>
        <field name="model">bang_luong</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="nhan_vien_id"/>
                            <field name="thang"/>
                            <field name="nam"/>
                        </group>
                        <group>
                            <field name="tong_thu_nhap"/>
                            <field name="tong_khau_tru"/>
                            <field name="thuc_linh" readonly="1"/>
                            <field name="trang_thai" />
                        </group>
                    </group>
                    <group>
                        <field name="ghi_chu"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_bang_luong_search" model="ir.ui.view">
        <field name="name">bang.luong.search</field>
        <field name="model">bang_luong</field>
        <field name="arch" type="xml">
           <search>
                <field name="nhan_vien_id"/>
                <field name="thang"/>
                <field name="nam"/>
                <filter string="Tháng này" name="thang_nay" domain="[('thang','=',context_today().month),('nam','=',context_today().year)]"/>
                <group expand="0" string="Group By">
                    <filter string="Nhân viên" name="grp_nv" context="{'group_by':'nhan_vien_id'}"/>
                    <filter string="Tháng" name="grp_thang" context="{'group_by':'thang'}"/>
                    <filter string="Năm" name="grp_nam" context="{'group_by':'nam'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_bang_luong" model="ir.actions.act_window">
        <field name="name">Bảng Lương</field>
        <field name="res_model">bang_luong</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_thang_nay': 1}</field>
    </record>
</odoo>
