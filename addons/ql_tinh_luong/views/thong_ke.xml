<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Graph View: Tổng lương theo nhân viên -->
    <record id="view_bang_luong_graph_nv" model="ir.ui.view">
        <field name="name">bang.luong.graph.nhan_vien</field>
        <field name="model">bang_luong</field>
        <field name="arch" type="xml">
            <graph type="bar" string="Tổng Lương Theo Nhân Viên">
                <field name="nhan_vien_id" type="row"/>
                <field name="thuc_linh" type="measure" operator="sum"/>
            </graph>
        </field>
    </record>

    <!-- Graph View: Tổng lương theo tháng -->
    <record id="view_bang_luong_graph_thang" model="ir.ui.view">
        <field name="name">bang.luong.graph.thang</field>
        <field name="model">bang_luong</field>
        <field name="arch" type="xml">
            <graph type="line" string="Tổng Lương Theo Tháng">
                <field name="thang" type="row"/>
                <field name="thuc_linh" type="measure" operator="sum"/>
            </graph>
        </field>
    </record>

