<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Salary Rule Tree View -->
    <record id="view_salary_rule_tree" model="ir.ui.view">
        <field name="name">salary.rule.tree</field>
        <field name="model">salary.rule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence"/>
                <field name="code"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="amount_type"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Salary Rule Form View -->
    <record id="view_salary_rule_form" model="ir.ui.view">
        <field name="name">salary.rule.form</field>
        <field name="model">salary.rule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="category_id"/>
                        </group>
                        <group>
                            <field name="amount_type"/>
                            <field name="active"/>
                            <field name="parent_rule_id"/>
                        </group>
                    </group>
                    
                    <!-- Cố định -->
                    <group>
                        <field name="amount_fixed" attrs="{'invisible': [('amount_type', '!=', 'fixed')]}"/>
                    </group>
                    
                    <!-- Phần trăm -->
                    <group>
                        <field name="amount_percentage" attrs="{'invisible': [('amount_type', '!=', 'percentage')]}"/>
                    </group>
                    
                    <!-- Python -->
                    <group attrs="{'invisible': [('amount_type', '!=', 'python')]}">
                        <field name="amount_python_compute" nolabel="1" placeholder="result = employee.basic_salary * 0.1"/>
                    </group>
                    
                    <!-- Điều kiện -->
                    <separator string="Điều kiện áp dụng"/>
                    <group>
                        <field name="condition_select"/>
                        <field name="condition_python" attrs="{'invisible': [('condition_select', '!=', 'python')]}" nolabel="1" placeholder="result = employee.department_id.name == 'IT'"/>
                    </group>
                    
                    <!-- Mô tả -->
                    <group>
                        <field name="mo_ta" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Salary Rule Search View -->
    <record id="view_salary_rule_search" model="ir.ui.view">
        <field name="name">salary.rule.search</field>
        <field name="model">salary.rule</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="name"/>
                <field name="category_id"/>
                <filter name="active" string="Hoạt động" domain="[('active', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Salary Rule Action -->
    <record id="action_salary_rule" model="ir.actions.act_window">
        <field name="name">Quy tắc lương</field>
        <field name="res_model">salary.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Định nghĩa quy tắc tính lương như BASIC, OT, ALLOWANCE, v.v.
            </p>
        </field>
    </record>

    <!-- Salary Rule Category -->
    <record id="salary_rule_category_gross" model="salary.rule.category">
        <field name="name">Lương Brutto</field>
        <field name="code">GROSS</field>
    </record>
    <record id="salary_rule_category_deduction" model="salary.rule.category">
        <field name="name">Khấu trừ</field>
        <field name="code">DEDUCTION</field>
    </record>
    <record id="salary_rule_category_net" model="salary.rule.category">
        <field name="name">Lương Netto</field>
        <field name="code">NET</field>
    </record>
</odoo>
