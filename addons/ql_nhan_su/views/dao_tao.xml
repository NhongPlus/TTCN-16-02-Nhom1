<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_dao_tao_tree" model="ir.ui.view">
        <field name="name">ql.dao.tao.tree</field>
        <field name="model">ql.dao.tao</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="ngay_bat_dau"/>
                <field name="ngay_ket_thuc"/>
                <field name="trang_thai"/>
            </tree>
        </field>
    </record>
    <record id="view_dao_tao_form" model="ir.ui.view">
        <field name="name">ql.dao.tao.form</field>
        <field name="model">ql.dao.tao</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="ngay_bat_dau"/>
                    <field name="ngay_ket_thuc"/>
                    <field name="trang_thai"/>
                </group>
                <group>
                    <field name="nhan_vien_ids" widget="many2many_tags"/>
                </group>
                <group>
                    <field name="mo_ta"/>
                </group>
            </form>
        </field>
    </record>
    <record id="action_dao_tao" model="ir.actions.act_window">
        <field name="name">Đào Tạo</field>
        <field name="res_model">ql.dao.tao</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_dao_tao_tree"/>
    </record>
</odoo>